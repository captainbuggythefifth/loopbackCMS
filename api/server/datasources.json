{
  "db": {
    "url": "mongodb://127.0.0.1:27017/loopbackcms",
    "name": "db",
    "connector": "mongodb"
  },
  "media": {
    "name": "media",
    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "./server/storage",
    "allowedContentTypes": [
      "image/jpg",
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/tiff",
      "application/pdf",
      "application/x-pdf",
      "application/acrobat",
      "applications/vnd.pdf",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
      "text/plain"
    ],
    "maxFileSize": 20000000
  }
}
